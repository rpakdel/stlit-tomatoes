{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python: Streamlit App",
      "type": "debugpy",
      "request": "launch",
      "module": "streamlit",
      "args": [
        "run",
        "${workspaceFolder}/app.py",
        "--server.port=8501",
        "--server.address=0.0.0.0"
      ],
      "console": "integratedTerminal",
      "justMyCode": false,
      "env": {
        "PYTHONPATH": "${workspaceFolder}"
      }
    },
    {
      "name": "Python: Current File",
      "type": "debugpy",
      "request": "launch",
      "program": "${file}",
      "console": "integratedTerminal",
      "justMyCode": true
    },
    {
      "name": "Python: Generate Data",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/generate_data.py",
      "console": "integratedTerminal",
      "justMyCode": true
    }
  ]
}
